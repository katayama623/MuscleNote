<div class="row">
  <%= form_for(@user) do |f| %>
  <div class="col-xs-3"></div>

  <div class="col-xs-9">
    <style>
      div{
        white-space: nowrap;
      }
    </style>

    <div class="form-group row" style="margin-top: 40px;">
      <div class="col-xs-3">
        <%= f.label :name, "ユーザーネーム" %>
      </div>
      <div class="col-xs-10">
        <%= f.text_field :name, class: "name" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-xs-3">
        <%= f.label :introduction, "プロフィール文" %>
      </div>
      <div class="col-xs-10">
        <%= f.text_area :introduction, class: "introduction" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-xs-3">
        <label for="post_img" style="width: 170px; margin: 20px 0">
          プロフィール画像選択/プレビュー
        </label>
      </div>
      <div class="col-xs-10">
        <div style="margin-bottom: 15px;">
        <%= attachment_image_tag @user, :profile_image, :limit, 300, 300, fallback: "NO-IMAGE.jpg",size: "200x200",id:"prev_img" %>
      </div>
        <%= f.attachment_field :profile_image,id: :post_img%>
      </div>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

  </div>

  <% end %>
</div>