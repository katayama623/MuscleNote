<div class="row">
  <h2>投降一覧</h2>

  <!-- 検索フォーム -->
  <%= render 'posts/search_form' %>

  <div class="col-lg-6">

    <!-- 投降一覧 -->
    <strong>
      <h3 style="text-align: center"><%= @search %> の検索結果</h3>
      <% @posts.each do |post| %>
        <%= render 'posts/post_index', post: post %>
      <% end %>
      <div style="margin-bottom: 100px;">
        <%= paginate @posts %>
      </div>
    </strong>
  </div>


  <div class="col-lg-6">

    <!-- 人気投稿 -->
    <h2 style="text-align: center">人気投稿</h2>
    <strong>
      <% @all_ranks.each do |post| %>
        <%= render 'posts/post_index', post: post %>
      <% end %>
    </strong>


    <!-- タグ一覧 -->
    <h2 style="background: rgba(110,240,255,0.3);color: black;">タグで検索</h2>
    <h3 style="padding: 15px; background: rgba(200,240,255,0.3);">
      <div style="margin: 5px 3px;">
        <% @tags.each do |tag| %>
          <%= link_to posts_path(tag_name: tag.name), style:"text-decoration: none;" do %>
            <%= tag %>
          <% end %>
        <% end %>
      </div>
    </h3>

    <div class="row">

      <!-- 効果部位一覧 -->
      <div class="col-xs-6">
        <h2 style="background: rgba(110,240,255,0.3);color: black;">効果部位で検索</h2>
        <h3 style="padding: 15px; background: rgba(200,240,255,0.3);">
          <div style="margin: 5px 3px;">
            <%= link_to posts_part0_path, :style=>"text-decoration:none;" do %>
            胸
            <% end %>
          </div>

          <div style="margin: 5px 3px;">
            <%= link_to posts_part1_path, :style=>"text-decoration:none;" do %>
            背中
            <% end %>
          </div>

          <div style="margin: 5px 3px;">
            <%= link_to posts_part2_path, :style=>"text-decoration:none;" do %>
            肩
            <% end %>
          </div>

          <div style="margin: 5px 3px;">
            <%= link_to posts_part3_path, :style=>"text-decoration:none;" do %>
            腕
            <% end %>
          </div>

          <div style="margin: 5px 3px;">
            <%= link_to posts_part4_path, :style=>"text-decoration:none;" do %>
            腹筋
            <% end %>
          </div>

          <div style="margin: 5px 3px;">
            <%= link_to posts_part5_path, :style=>"text-decoration:none;" do %>
            太腿
            <% end %>
          </div>

          <div style="margin: 5px 3px;">
            <%= link_to posts_part6_path, :style=>"text-decoration:none;" do %>
            上半身全体
            <% end %>
          </div>

          <div style="margin: 5px 3px;">
            <%= link_to posts_part7_path, :style=>"text-decoration:none;" do %>
            下半身全体
            <% end %>
          </div>

          <div style="margin: 5px 3px;">
            <%= link_to posts_part8_path, :style=>"text-decoration:none;" do %>
            その他
            <% end %>
          </div>
        </h3>
      </div>

      <!-- 強度一覧 -->
      <div class="col-xs-6">
        <h2 style="background: rgba(110,240,255,0.3);color: black;">強度で検索</h2>
        <h3 style="padding: 15px; background: rgba(200,240,255,0.3);">
          <div style="margin: 5px 3px;">
            <%= link_to posts_strong0_path, :style=>"text-decoration:none;" do %>
            軽め
            <% end %>
          </div>

          <div style="margin: 5px 3px;">
            <%= link_to posts_strong1_path, :style=>"text-decoration:none;" do %>
            普通
            <% end %>
          </div>

          <div style="margin: 5px 3px;">
            <%= link_to posts_strong2_path, :style=>"text-decoration:none;" do %>
            強め
            <% end %>
          </div>
      </div>
    </div>

  </div>
</div>


